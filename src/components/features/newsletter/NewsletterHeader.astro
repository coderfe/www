---
import dayjs from 'dayjs';
import IconBook from '~icons/tabler/book';
import IconCalendar from '~icons/tabler/calendar';

interface Props {
  title: string;
  cover?: string;
  description?: string;
  date: Date;
  issue: number | string;
  total: number;
}

const { title, cover, description, date, issue, total } = Astro.props;
const formattedDate = dayjs(date).format('DD MMM, YYYY');
---

<div class="mb-6">
  <div class="flex items-center text-sm text-zinc-500 dark:text-zinc-400 mb-3">
    <div class="flex items-center gap-2 mr-4">
      <IconCalendar class="w-4 h-4" aria-hidden="true"></IconCalendar>
      <time datetime={date.toISOString()}>{formattedDate}</time>
    </div>
    <div class="flex items-center gap-2">
      <IconBook class="w-4 h-4" aria-hidden="true"></IconBook>
      <span>第 {issue} 期</span>
    </div>
  </div>

  <h1 class="text-3xl md:text-4xl font-bold mb-6 bg-clip-text text-transparent bg-gradient-to-r from-zinc-800 via-zinc-900 to-zinc-800 dark:from-white dark:via-zinc-100 dark:to-white leading-[1.15]">{title}</h1>

  {description && (
    <div class="relative my-6">
      <p class="font-serif text-lg italic leading-relaxed tracking-wide text-zinc-600 dark:text-zinc-300">
        {description}
      </p>
    </div>
  )}

  {cover && 
    <div class="mb-8">
      <img src={cover} alt={title} class="object-cover rounded-xl mb-4" />
    </div>
  }
</div>
